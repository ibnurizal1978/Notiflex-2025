<%- include('layouts/header') %>
<main role="main" class="main-content">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-12 col-xl-8">
        <div class="card shadow mb-4">
          <div class="card-body">
            <h2 class="h3 mb-0 page-title">Add Item</h2>
            <form id="addItemForm" enctype="multipart/form-data">
              <input type="hidden" name="object_id" value="<%= object_id %>">
              <div class="form-group">
                <label>Name</label>
                <input type="text" name="name" class="form-control" required>
              </div>
              <div class="form-group">
                <label>Location</label>
                <input type="text" name="location" class="form-control">
              </div>
              <div class="form-group">
                <label>Notes</label>
                <input type="text" name="notes" class="form-control">
              </div>
              <div class="form-group">
                <label>Upload File (PDF/JPG/PNG)</label>
                <input type="file" name="file" class="form-control" accept=".pdf,.jpg,.jpeg,.png" required>
              </div>
              <button type="submit" class="btn btn-primary">Save</button>
              <div id="itemMsg" class="mt-2"></div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<%- include('layouts/footer') %>
<script>
document.getElementById('addItemForm').addEventListener('submit', async function(e) {
  e.preventDefault();
  const form = this;
  const formData = new FormData(form);
  document.getElementById('itemMsg').innerHTML = '';
  try {
    const res = await fetch('/dashboard/items/add', {
      method: 'POST',
      body: formData
    });
    const result = await res.json();
    if (result.success) {
      document.getElementById('itemMsg').innerHTML = '<div class="alert alert-success">Item created!</div>';
      setTimeout(() => window.location.href = '/dashboard/objects', 1000);
    } else {
      document.getElementById('itemMsg').innerHTML = '<div class="alert alert-danger">' + (result.error || 'Failed to create item.') + '</div>';
    }
  } catch (err) {
    document.getElementById('itemMsg').innerHTML = '<div class="alert alert-danger">Failed to create item.</div>';
  }
});
</script> 